<Window x:Class="ClientChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientChatApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="350">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 30">
            <TextBox  x:Name="txtIPAddress" Margin="30 30 15 0"
                      Height="40"
                      Width="215" />
            <Button x:Name="btnConnext" Height="40"
                    Margin=" 0 30 0 0"
                    Width="60"
                    Click="btnConnext_Click">Connect</Button>
        </StackPanel>
        <TextBox x:Name="txtResponse"
                 Margin="30 0  30 0"
                 Height="240"></TextBox>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txtSend" Margin="30 30 15 0"
                      Height="40"
                      Width="230" />
            <Button x:Name="btnSend" Height="40"
                    Margin=" 0 30 0 0"
                    Width="40"
                    Click="btnSend_Click">Send</Button>
        </StackPanel>
    </StackPanel>
</Window>
