<Window x:Class="ServerChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerChatApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="350">
    <StackPanel>
        <Button x:Name="btnListen" Margin="30" Height="40"
                Click="btnListen_Click">Listen</Button>
        <TextBox x:Name="txtResponse" Margin="30 0  30 0"
                 Height="240"></TextBox>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txtSend" Margin="30 30 15 0" Height="40" Width="230" />
            <Button x:Name="btnSend" Height="40" Margin=" 0 30 0 0" Width="40"
                    Click="btnSend_Click"> Send</Button>
        </StackPanel>
    </StackPanel>
</Window>
